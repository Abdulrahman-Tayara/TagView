<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".MainActivity">


    <com.tayara.flexlistlayoutapp.flexlistlayout.FlexListLayout
        android:id="@+id/flex_view"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:close_button_enable="true"
        app:close_button_image="@drawable/ic_close_24px"
        app:item_text_button_space="20dp"
        app:item_textSize="8dp" />

</LinearLayout>